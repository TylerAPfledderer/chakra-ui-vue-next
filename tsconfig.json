{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "typeRoots": ["./node_modules/@types", "./@types"],
    "types": [
      "cypress",
      "node",
      "vue",
      "jest",
    ],
    // "baseUrl": ".",
    "lib": ["dom", "esnext"],
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": false,
    "importsNotUsedAsValues": "preserve",
    "noFallthroughCasesInSwitch": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "preserveValueImports": false,
    // "incremental": true,
    "declarationMap": true
  },
  "include": [
    "cypress/support/index.ts",
    "packages/**/*.vue",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "packages/*.tsx",
    "tooling/**/*.ts",
    "tooling/**/*.tsx",
    "tooling/*.tsx",
    "playground/**/*.ts",
    "playground/**/*.tsx",
    "playground/**/*.d.ts",
    "playground/**/*.vue",
    "playground/**/*.json",
    "tests/index.d.ts",
    "**/*.d.ts",
    "vite.config.ts",
  ],
  "exclude": [
    "node_modules",
    "./@types",
    "dist",
    // "packages/**/*.test.ts",
    // "**/*.cy.tsx",
    "cypress/**/*.(ts|tsx)",
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "resolveJsonModule": true,
      "noImplicitAny": false
    }
  },
}
